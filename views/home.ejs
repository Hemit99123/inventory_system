<%- include("./partials/header") %>

<div class="container mt-5">
    <a href="/logout" class="btn btn-danger">Logout</a>
    <center><h2>Welcome admin!</h2></center>
</div>
<table class="table">
    <thead>
      <tr>
        <th scope="col">Item ID</th>
        <th scope="col">Name</th>
        <th scope="col">Price</th>

      </tr>

      <%- include("./partials/header") %>
      
<div class="container mt-5">
    <h1>Add item!</h1>
    <form action="/add" method="POST">
        <div class="form-group">
            <label>Your item name</label>
            <input  name="item_name" class="form-control" id="item_name" required="required">
        </div>
        <div class="form-group">
            <label>Price</label>
            <input type="number" name="price" class="form-control" id="price" required="required">
        </div>
        <button type="submit" class="btn btn-primary">Add!</button>
    </form>
</div>
<br>
<h4>Other Items added!</h4>

<%- include("./partials/footer") %>
    </thead>
    <tbody>
    <%viewsList.forEach(views => {%>
        <tr>
            <th scope="row"><%= views._id %></th>
            <td><%= views.item_name %></td>
            <td>$<%= views.price %></td>
        </tr>
    <%})%>
    </tbody>
  </table>
<%- include("./partials/footer") %>